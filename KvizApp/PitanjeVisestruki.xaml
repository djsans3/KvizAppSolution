<Window x:Class="Kviz.Wpf.PitanjeVisestruki"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz.Wpf"
        mc:Ignorable="d"
        Title="PitanjeVisestruki" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="Gray" 
                BorderThickness="2"
                CornerRadius="10"
                Padding="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MinWidth="500"
                MinHeight="250" Height="307">
            <StackPanel>
                <TextBlock Text="Pitanje 1:" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Koji od sljedećih jezika nije objektno orijentiran?" 
                           FontSize="16"
                           TextWrapping="Wrap"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Odaberite točan odgovor:" 
                           FontSize="14"
                           Margin="0,0,0,15"/>

                <RadioButton x:Name="rbOdgovor1" 
                             Content="a) Java" 
                             FontSize="14"
                             Margin="0,5"
                             GroupName="Odgovori"/>

                <RadioButton x:Name="rbOdgovor2" 
                             Content="b) Python" 
                             FontSize="14"
                             Margin="0,5"
                             GroupName="Odgovori"/>

                <RadioButton x:Name="rbOdgovor3" 
                             Content="c) C" 
                             FontSize="14"
                             Margin="0,5"
                             GroupName="Odgovori"/>

                <RadioButton x:Name="rbOdgovor4" 
                             Content="d) C#" 
                             FontSize="14"
                             Margin="0,5"
                             GroupName="Odgovori"/>
            </StackPanel>
        </Border>

        
        <Grid Grid.Row="1" Margin="50,0,50,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="Natrag" 
                    Width="120" 
                    Height="40"
                    FontSize="14"
                    HorizontalAlignment="Left"
                    Click="btnNatrag_Click"/>

            <Button Grid.Column="1" 
                    Content="Nastavi" 
                    Width="120" 
                    Height="40"
                    FontSize="14"
                    HorizontalAlignment="Right"
                    Click="btnNastavi_Click"/>
        </Grid>
    </Grid>
</Window>
