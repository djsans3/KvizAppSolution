<Window x:Class="KvizApp.NeuspjelaPrijava"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KvizApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Neuspjela prijava"
      WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Neuspjela prijava! Pokreni ponovo!" 
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,20,0,30"
                   TextWrapping="Wrap"/>

        <TextBox Grid.Row="1" x:Name="txtKorisnickoIme2"
                 Width="300" Height="35" Margin="0,10"
                 FontSize="14" Padding="5"
                 Text="Upišite korisničko ime"/>

        <PasswordBox Grid.Row="2" x:Name="txtLozinka2"
                     Width="300" Height="35" Margin="0,10"
                     FontSize="14" Padding="5"
                     Password="12345678"/>

        <Button Grid.Row="3" x:Name="btnPrijava2"
                Content="Prijava" Width="120" Height="35"
                Margin="0,20" FontSize="14"
                Click="btnPrijava2_Click"/>

    </Grid>
</Window>