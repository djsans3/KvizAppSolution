<Window x:Class="Kviz.Wpf.DostupniIspitiProfesor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz.Wpf"
        mc:Ignorable="d"
        Title="DostupniIspitiProfesor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Row="0" Background="LightYellow" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="kVIz" 
                       FontSize="24" FontWeight="ExtraBold"
                       Foreground="Orange"
                    
                       VerticalAlignment="Center" Margin="20,0"
                       />

            <Button Grid.Column="1" Content="Odjava" 
                    Width="100" Height="35" Margin="20,0"
                    FontSize="14"
                    Foreground="MidnightBlue"
                    FontWeight="ExtraBold"
                    Background="CornflowerBLue"
                    Click="btnOdjava_Click"/>
        </Grid>

       
        <DataGrid Grid.Row="1" x:Name="dgIspiti" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  Margin="20"
                  FontSize="14"
                  Background="PeachPuff"
                  RowHeight="50" SelectionChanged="dgIspiti_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Redni broj" 
                                  Binding="{Binding RedniBroj}" 
                                  Width="100"/>
                <DataGridTextColumn Header="Naziv ispita" 
                                  Binding="{Binding NazivIspita}" 
                                  Width="*"/>
                <DataGridTextColumn Header="Broj pitanja" 
                                  Binding="{Binding BrojPitanja}" 
                                  Width="100"/>
                <DataGridTextColumn Header="Bodovi" 
                                  Binding="{Binding Bodovi}" 
                                  Width="100"/>
                <DataGridTextColumn Header="Rang" 
                  Binding="{Binding BrojPitanja}" 
                  Width="100"/>

                
                <DataGridTemplateColumn Header="Uredi" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="✏️" 
                                    Height="30" Width="40"
                                    FontSize="16"
                                    Click="btnUredi_Click"
                                    Tag="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                
                <DataGridTemplateColumn Header="Obriši" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="🗑️" 
                                    Height="30" Width="40"
                                    FontSize="16"
                                    Click="btnObrisi_Click"
                                    Tag="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        
        <Button Grid.Row="2" Content="Dodaj ispit" 
                Width="200" Height="50"
                FontSize="16" 
                
                Margin="0,0,0,30"
                Foreground="MidnightBlue"
                FontWeight="ExtraBold"
                Background="CornflowerBLue"
                HorizontalAlignment="Center"
                Click="btnDodajIspit_Click"/>
    </Grid>
</Window>
