<Window x:Class="Kviz.Wpf.Zavrsetak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz.Wpf"
        mc:Ignorable="d"
        Title="Zavrsetak" Height="450" Width="800">
    <Grid>
        <Border Background="White" 
                BorderBrush="Gray" 
                BorderThickness="2"
                CornerRadius="10"
                Margin="50,30,50,30"
                Padding="40">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Završetak kreiranja ispita" 
                           FontSize="22" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Naziv ispita:" 
                           FontSize="14"
                           Margin="0,0,0,10"/>

                <TextBox x:Name="txtNazivIspita" 
                         Height="40"
                         FontSize="14"
                         Padding="5"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Broj bodova:" 
                           FontSize="14"
                           Margin="0,0,0,10"/>

                <TextBox x:Name="txtBrojBodova" 
                         Height="40"
                         FontSize="14"
                         Padding="5"
                         Margin="0,0,0,30"/>

                <Button Content="Završi" 
                        Width="150" 
                        Height="45"
                        FontSize="16"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Click="btnZavrsi_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
