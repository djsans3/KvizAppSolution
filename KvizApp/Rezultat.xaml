<Window x:Class="Kviz.Wpf.Rezultat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz.Wpf"
        mc:Ignorable="d"
        Title="Rezultat" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <Border Grid.Row="0"  Padding="20" Margin="0,-13,0,14">
            <TextBlock Text="Vaš rezultat:" 
                       FontSize="32" 
                       FontWeight="Bold"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Glavni sadržaj sa rezultatima -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1"
                Margin="10,0,10,0"
                Padding="40"
                CornerRadius="10">
            <StackPanel VerticalAlignment="Center">

               
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30">
                    <TextBlock Text="Bodovi: " 
                               FontSize="24"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtBodovi" 
                               Text="85/100" 
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#4CAF50"/>
                </StackPanel>

            

                <!-- Postotak -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20">
                    <TextBlock Text="Postotak riješenosti: " 
                               FontSize="20"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtPostotak" 
                               Text="85%" 
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2196F3"/>
                </StackPanel>

                <!-- Ocjena -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20">
                    <TextBlock Text="Ocjena: " 
                               FontSize="20"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtOcjena" 
                               Text="Vrlo dobar (4)" 
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#FF9800"/>
                </StackPanel>

                <!-- Rang lista -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0">
                    <TextBlock Text="Pozicija na rang listi: " 
                               FontSize="20"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtRangLista" 
                               Text="12" 
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#9C27B0"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Gumbi na dnu -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30">
            <Button Content="Povratak na ispite" 
                    Width="150" 
                    Height="40"
                    FontSize="14"
                    Margin="10"
                    Click="btnPovratak_Click"/>

            <Button Content="Odjava" 
                    Width="100" 
                    Height="40"
                    FontSize="14"
                    Margin="10"
                    Click="btnOdjava_Click"/>
        </StackPanel>
    </Grid>
</Window>
