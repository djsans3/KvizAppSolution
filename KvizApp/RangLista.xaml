<Window x:Class="Kviz.Wpf.RangLista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz.Wpf"
        mc:Ignorable="d"
        Title="Rang Lista" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="LightYellow" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="kVIz" 
                       FontSize="24" FontWeight="ExtraBold" Foreground="Orange"
                       VerticalAlignment="Center" Margin="20,0,20,0"/>

            <Button Grid.Column="1" Content="Povratak" 
                    Width="100" Height="35" Margin="20,0"
                    FontSize="14" Foreground="MidnightBlue"
                    FontWeight="ExtraBold"
                    Background="CornflowerBlue"
                    Click="btnPovratak_Click"/>
        </Grid>

        <!-- Naslov ispita -->
        <TextBlock Grid.Row="1" x:Name="txtNaslov"
                   Text="Rang lista"
                   FontSize="24" FontWeight="Bold" Foreground="Orange"
                   HorizontalAlignment="Center" Margin="0,15,0,10"/>

        <!-- DataGrid s rang listom -->
        <DataGrid Grid.Row="2" x:Name="dgRangLista"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  Margin="20,10,20,10"
                  FontSize="14" Background="PeachPuff"
                  RowHeight="40">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" 
                                    Binding="{Binding Pozicija}" 
                                    Width="60"/>
                <DataGridTextColumn Header="Student" 
                                    Binding="{Binding StudentUsername}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Broj tocnih" 
                                    Binding="{Binding BrojTocnihOdgovora}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Datum" 
                                    Binding="{Binding Datum, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                    Width="160"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Poruka kad nema rezultata -->
        <TextBlock Grid.Row="2" x:Name="txtNemaRezultata"
                   Text="Nema rezultata za ovaj ispit."
                   FontSize="16" Foreground="Gray"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Visibility="Collapsed"/>
    </Grid>
</Window>
