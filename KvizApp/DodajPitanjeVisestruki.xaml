<Window x:Class="Kviz.Wpf.DodajPitanjeVisestruki"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz.Wpf"
        mc:Ignorable="d"
        Title="DodajPitanjeVisestruki" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,-28,0,28">
            <Border Background="White" 
                    BorderBrush="Gray" 
                    BorderThickness="2"
                    CornerRadius="10"
                    Margin="50"
                    Padding="30"
                    MinWidth="500" Height="355">
                <StackPanel>
                    <TextBlock x:Name="txtBrojPitanja" Text="Pitanje 1:" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Unesite pitanje:" 
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <TextBox x:Name="txtPitanje" 
                             Height="80"
                             FontSize="14"
                             Padding="5"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Ponuđeni odgovori:" 
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <StackPanel x:Name="panelOdgovori">
                        <!-- Defaultna 2 odgovora -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <RadioButton GroupName="TocanOdgovor" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="500" Height="30" Padding="5"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <RadioButton GroupName="TocanOdgovor" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="500" Height="30" Padding="5"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="+ Dodaj još jedan odgovor" 
                            Width="200" 
                            Height="35"
                            FontSize="12"
                            Margin="0,15,0,0"
                            Click="btnDodajOdgovor_Click"/>

                    <TextBlock Text="(Označite radio button pored točnog odgovora)" 
                               FontSize="11"
                               Foreground="Gray"
                               Margin="0,10,0,0"
                               FontStyle="Italic"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Gumbi -->
        <Grid Grid.Row="1" Margin="50,0,50,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="Natrag" 
                    Width="100" 
                    Height="40"
                    FontSize="14"
                    Click="btnNatrag_Click"/>

            <Button Grid.Column="1" 
                    Content="Završi" 
                    Width="100" 
                    Height="40"
                    FontSize="14"
                    Margin="10,0"
                    HorizontalAlignment="Center"
                    Click="btnZavrsi_Click"/>

            <Button Grid.Column="2" 
                    Content="Dodaj tekstualno pitanje" 
                    Width="180" 
                    Height="40"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Click="btnDodajTekstualno_Click"/>

            <Button Grid.Column="3" 
                    Content="Dodaj višestruki odgovor" 
                    Width="180" 
                    Height="40"
                    FontSize="14"
                    Click="btnDodajVisestruki_Click"/>
        </Grid>
    </Grid>
</Window>
