<Window x:Class="Kviz.Wpf.UrediIspit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz.Wpf"
        mc:Ignorable="d"
        Title="Uredi ispit" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="LightYellow" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="kVIz" 
                       FontSize="24" FontWeight="ExtraBold" Foreground="Orange"
                       VerticalAlignment="Center" Margin="20,0"/>

            <Button Grid.Column="1" Content="Odjava" 
                    Width="100" Height="35" Margin="20,0"
                    FontSize="14" Foreground="MidnightBlue"
                    FontWeight="ExtraBold"
                    Background="CornflowerBlue"
                    Click="btnOdjava_Click"/>
        </Grid>

        <StackPanel Grid.Row="1" Margin="20,15,20,5">
            <TextBlock Text="Naziv ispita:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtNazivIspita" Height="35" FontSize="14" Padding="5"/>
        </StackPanel>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20,10,20,10">
            <StackPanel x:Name="panelPitanja"/>
        </ScrollViewer>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="Natrag" 
                    Width="120" Height="40"
                    FontSize="14" Foreground="MidnightBlue"
                    FontWeight="ExtraBold" Background="CornflowerBlue"
                    Margin="10,0"
                    Click="btnNatrag_Click"/>

            <Button Content="Spremi promjene" 
                    Width="160" Height="40"
                    FontSize="14" Foreground="MidnightBlue"
                    FontWeight="ExtraBold" Background="CornflowerBlue"
                    Margin="10,0"
                    Click="btnSpremi_Click"/>

            <Button Content="Obrisi pitanje" 
                    Width="140" Height="40"
                    FontSize="14" Foreground="MidnightBlue"
                    FontWeight="ExtraBold" Background="CornflowerBlue"
                    Margin="10,0"
                    Click="btnObrisiPitanje_Click"/>
        </StackPanel>
    </Grid>
</Window>
 