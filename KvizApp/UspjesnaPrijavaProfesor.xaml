<Window x:Class="Kviz.Wpf.UspjesnaPrijavaProfesor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz.Wpf"
        mc:Ignorable="d"
        Title="UspjesnaPrijavaProfesor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#F0F0F0" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="kVIz" 
                       FontSize="24" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="20,0"/>

            <Button Grid.Column="1" Content="Odjava" 
                    Width="100" Height="35" Margin="20,0"
                    FontSize="14"
                    Click="btnOdjava_Click"/>
        </Grid>

        <!-- Poruka -->
        <Grid Grid.Row="1">
            <TextBlock Text="Nema ispita za prikaz!" 
                       FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="#333333"/>
        </Grid>

        <!-- Gumb Dodaj ispit -->
        <Button Grid.Row="2" Content="Dodaj ispit" 
                Width="200" Height="50"
                FontSize="16" FontWeight="Bold"
                Margin="0,0,0,40"
                HorizontalAlignment="Center"
                Click="btnDodajIspit_Click"/>
    </Grid>
</Window>
