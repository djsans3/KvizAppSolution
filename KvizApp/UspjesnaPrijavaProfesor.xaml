<Window x:Class="Kviz.Wpf.UspjesnaPrijavaProfesor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz.Wpf"
        mc:Ignorable="d"
        Title="UspjesnaPrijavaProfesor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="LightYellow" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="kVIz" 
                       FontSize="24" FontWeight="ExtraBold" Foreground="Orange"
                       VerticalAlignment="Center" Margin="20,0"/>

            <Button Grid.Column="1" Content="Odjava" 
                    Width="100" Height="35" Margin="20,0"
                    FontSize="14" Foreground="MidnightBlue"
                    FontWeight="ExtraBold"
                    Background="CornflowerBlue"
                    Click="btnOdjava_Click"/>
        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Pregledaj ispite"
                    Width="250" Height="60"
                    FontSize="20" FontWeight="ExtraBold"
                    Foreground="MidnightBlue"
                    Background="CornflowerBlue"
                    Margin="0,0,0,20"
                    Click="btnPregledajIspite_Click"/>

            <Button Content="Dodaj ispit" 
                    Width="250" Height="60"
                    FontSize="20" FontWeight="ExtraBold"
                    Foreground="MidnightBlue"
                    Background="CornflowerBlue"
                    Click="btnDodajIspit_Click"/>
        </StackPanel>
    </Grid>
</Window>
