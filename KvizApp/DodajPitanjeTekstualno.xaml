<Window x:Class="Kviz.Wpf.DodajPitanjeTekstualno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kviz.Wpf"
        mc:Ignorable="d"
        Title="DodajPitanjeTekstualno" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="LightYellow" 
                BorderBrush="Gray" 
                BorderThickness="2"
                CornerRadius="10"
                Margin="50"
                Padding="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MinWidth="500"
                MinHeight="250">
            <StackPanel>
                <TextBlock x:Name="txtBrojPitanja" Text="Pitanje:" 
                           FontSize="23" 
                           Foreground="Orange"
                           FontWeight="ExtraBold"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Unesite pitanje:" 
                           FontSize="14"
                           Margin="0,0,0,10"/>

                <TextBox x:Name="txtPitanje" 
                         Height="40"
                         FontSize="14"
                         Padding="5"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Točan odgovor:" 
                           FontSize="14"
                           Margin="0,0,0,10"/>

                <TextBox x:Name="txtOdgovor" 
                         Height="40"
                         FontSize="14"
                         Padding="5"
                         VerticalContentAlignment="Center"/>
            </StackPanel>
        </Border>

        
        <Grid Grid.Row="1" Margin="50,0,50,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="Odustani" 
                    Width="100" 
                    Height="40"
                    FontSize="14"
                    FontWeight="ExtraBold"
                    Foreground="MidnightBlue"
                    Background="CornflowerBlue"
                    Click="btnNatrag_Click"/>

            <Button Grid.Column="1" 
                    Content="Završi" 
                    Width="100" 
                    Height="40"
                    FontSize="14"
                    Margin="10,0"
                    Foreground="MidnightBlue"
                    FontWeight="ExtraBold"
                    Background="CornflowerBlue"
                    HorizontalAlignment="Center"
                    Click="btnZavrsi_Click"/>

            <Button Grid.Column="2" 
                    Content="Dodaj tekstualno pitanje" 
                    Width="180" 
                    Height="40"
                    FontSize="14"
                    Foreground="MidnightBlue"
                    FontWeight="ExtraBold"
                    Background="CornflowerBlue"
                    Margin="0,0,10,0"
                    Click="btnDodajTekstualno_Click"/>

            <Button Grid.Column="3" 
                    Content="Dodaj višestruki odgovor" 
                    Width="180" 
                    Height="40"
                    Foreground="MidnightBlue"
                    FontWeight="ExtraBold"
                    Background="CornflowerBlue"
                    FontSize="14"
                    Click="btnDodajVisestruki_Click"/>
        </Grid>

    </Grid>
</Window>
